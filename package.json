{
  "name": "@croct/content",
  "version": "0.0.0-dev",
  "description": "Dynamically generated content module.",
  "author": {
    "name": "Croct",
    "email": "lib+content-js@croct.com",
    "url": "https://github.com/croct-tech/content-js"
  },
  "license": "MIT",
  "keywords": [
    "croct",
    "personalization",
    "cms",
    "content"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/croct-tech/content-js.git"
  },
  "bugs": {
    "url": "https://github.com/croct-tech/content-js/issues"
  },
  "homepage": "https://github.com/croct-tech/content-js",
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.js",
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.cjs"
    },
    "./slot": {
      "import": "./slot/index.js",
      "require": "./slot/index.cjs"
    },
    "./*": {
      "import": "./*.js",
      "require": "./*.cjs"
    }
  },
  "scripts": {
    "lint": "eslint 'src/**/*.ts'",
    "validate": "tsc --noEmit",
    "test": "jest -c jest.config.mjs --coverage",
    "build": "tsup"
  },
  "dependencies": {
    "@croct/json": "^2.1.0"
  },
  "devDependencies": {
    "@croct/eslint-plugin": "^0.7.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.1",
    "typescript": "^5.0.0",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.0.0",
    "jest": "^29.0.0",
    "tsup": "^8.4.0"
  },
  "files": [
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.ts",
    "**/*.map"
  ]
}
